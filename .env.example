# Flask Configuration
FLASK_ENV=development
FLASK_APP=run.py
FLASK_DEBUG=1
FLASK_RUN_HOST=127.0.0.1
FLASK_RUN_PORT=5000

# Application Security
SECRET_KEY=your-secret-key-change-me
PASSWORD_SALT=your-password-salt-change-me
ENCRYPTION_KEY_PATH=keys/encryption.key

# Session and Authentication
SESSION_DURATION=3600  # 1 hour in seconds
TOKEN_EXPIRY=86400     # 24 hours in seconds

# Database Configuration
DATABASE_PATH=instance/app.db

# Google API Configuration
# For service account authentication
GA4_CREDENTIALS_PATH=keys/ga4-service-account.json

# For OAuth authentication (if needed)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://127.0.0.1:5000/auth/callback

# Application Settings
APP_NAME=GA4 Analytics Dashboard
PLUGIN_PATHS=app.plugins

# Logging
LOG_LEVEL=INFO